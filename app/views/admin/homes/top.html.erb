<!--管理者画面homes/topページ-->
<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">

  <h5 class="bg-light d-inline px-4">注文履歴一覧</h5>
    <table class="table mt-3">
      <tr class="bg-light">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <% @orders.each do |order| %>
      <tr class="border-bottom">
        <td>
          <%= order.created_at %>
          <%# end %>
        </td>
        <td><%= order.name %></td>
        <td>
          <%#= order.order_details.sum(:amount) %>
        </td>
        <td><%#= order_detail.order.order_status %></td>
      </tr>
      <% end %>



      <!--ページネーション複数のテーブルから情報もってくるときの方法教えてもらう！-->
      <%#= paginate @orders %>
    </table>

    </div>

  </div>


</div>