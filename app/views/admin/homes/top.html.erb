<!--管理者画面homes/topページ-->
<div class="container mt-4">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <table class="table bg-light">
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </thead>
      <!--1つ目の配列.zip(2つ目の配列) do |変数1, 変数2|-->
      <% @orders.zip(@order_details) do |order,order_detail| %>
      <tr>
        <td><%= order.create_at %></td>
        <td><%= order.name %></td>
        <td>注文個数</td>
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
    </table>


  </div>


</div>