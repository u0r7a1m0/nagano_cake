<!--管理者画面homes/topページ-->
<div class="container">
  <div class="row">
    <div class="col-md-11 mx-auto">

  <h5 class="bg-light d-inline px-4">注文履歴一覧</h5>
    <table class="table mt-3">
      <tr class="bg-light">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <% @orders.each do |order| %>
      <tr class="border-bottom">
        <td>
          <%= link_to admin_order_path(order) do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
        </td>
        <td>
          <%= order.name %>
        </td>
        <td>
          <%= order.order_details.sum(:amount) %>
        </td>
        <td>
          <%= order.order_status_i18n %>
        </td>
      </tr>
      <% end %>
    </table>
    </div>
  <div class="mx-auto"><%= paginate @orders %></div>
  </div>
</div>