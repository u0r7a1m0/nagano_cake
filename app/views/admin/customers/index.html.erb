<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h5 class="bg-light px-4 d-inline ml-md-5">会員一覧</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table mt-4">
        <thead class="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        </thead>
        <% @customers.each do |customer| %>

        <tr class="border-bottom">
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <%if customer.is_deleted %>
          <td class="text-secondary">
            退会
          </td>
          <% else %>
          <td class="text-success">
            有効
          </td>
          <% end %>
        </tr>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto"><%= paginate @customers %></div>
  </div>
</div>