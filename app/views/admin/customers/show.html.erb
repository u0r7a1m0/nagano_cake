<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h5 class="bg-light px-4 d-inline ml-md-3"><%= @customer.full_name %>さんの会員詳細</h5>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%if @customer.is_deleted %>
            <p class="text-secondary"><b>退会</b></p>
            <% else %>
            <p class="text-success"><b>有効</b></p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= link_to '編集する', edit_admin_customer_path, class: 'btn btn-success' %>

      <%= link_to '注文履歴一覧を見る', admin_orders_path(@customer.id), class: 'btn btn-primary ' %>
    </div>
  </div>
</div>