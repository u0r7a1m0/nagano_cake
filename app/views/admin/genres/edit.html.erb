  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h5 class="d-inline px-4 bg-light">ジャンル編集</h5>
      </div>
    </div>

    <div class="row mt-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="d-md-flex">
        <div class="mb-2">
          <%= f.label :'ジャンル名'%>
        </div>
        <div class="ml-md-4 mb-3">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="ml-md-3 mb-3">
          <%= f.submit "変更を保存",class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>