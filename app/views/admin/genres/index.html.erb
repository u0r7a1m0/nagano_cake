<!--ジャンル一覧・追加ページ-->

<div class="container mt-4">

  <div class="row mb-5">
    <h5 class="bg-light d-inline px-3 ml-5">ジャンル一覧・追加</h5>
  </div>

  <!--ジャンル登録-->
  <div class="genre-new d-flex">
    <div class="form-group d-flex ml-2 mb-5">
      <%#= form_with model: @genre do |f| %>
      <label for="genre_name">ジャンル名</label>
      <%#=f.text_field:name, class: 'form-control' %>
    </div>
    <!--ボタン-->
    <button type="submit" class="btn btn-success mb-md-5 ml-5">新規登録</button>
      <%#= f.submit "新規登録" %>
      <%# end %>

  </div>



  <!--ジャンル編集-->

    <table class="table col-md-4">
      <thead class="bg-light">
        <tr>
          <th class="px-5">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <!--each文いれる！-->
      <tr>
        <td>ジャンル名</td>
        <td>
          <button class="btn btn-success">
            編集する
          </button>
        </td>
      </tr>
    </table>

</div>