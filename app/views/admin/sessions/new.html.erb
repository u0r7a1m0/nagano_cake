<!--管理者用ログインページ-->

<div class="container">
  <div class="row mt-5 mx-md-auto">
    <div class="col-md-11 mx-auto">
      <h4 class="bg-light d-inline">管理者ログイン</h4>
    </div>

      <div class="col-md-9 mx-auto">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3 mt-5 row">
          <label for="email" class="col-md-3 col-form-label">メールアドレス</label>
          <div class="col-sm-8">
            <input type="email" class="form-control" id="staticEmail" placeholder="sample@example.com">
          </div>
        </div>
        <div class="mb-5 row">
          <label for="inputPassword" class="col-md-3 col-form-label">パスワード</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" id="inputPassword">
            <div class="actions mt-3">
              <button type="submit" class="btn btn-primary mb-md-5">
              ログイン
              </button>
            </div>
          </div>
        </div>
        <% end %>
      </div>


  </div>
</div>

