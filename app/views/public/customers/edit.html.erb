<div class="container">

  <h5 class="bg-light d-inline px-2">会員情報編集</h5>

  <div class="row mt-4">
    <div class="col-md-12 m-auto">
    <%= form_with model: @customer ,url: information_path(current_customer.id) do |f| %>
      <!--氏名-->
      <div class="field d-md-flex my-2">
        <div class="col-md-3">
          <%= f.label :'氏名' %>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control " %>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子", class: "form-control " %>
        </div>
      </div>
      <!--フリガナ-->
      <div class="field d-md-flex my-2">
        <div class="col-md-3">
          <%= f.label :'フリガナ' %>
        </div>

        <div class="col-md-3 mb-2">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
        </div>

        <div class="col-md-3 mb-2">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
        </div>
      </div>

      <!--郵便番号-->
      <div class="field d-md-flex my-2">
        <div class="col-md-3">
          <%= f.label :'郵便番号'%>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control " %>
        </div>
      </div>

      <!--住所-->
      <div class="field d-md-flex my-2">
        <div class="col-md-3">
          <%= f.label :'住所'%>
        </div>
        <div class="col-md-6 mb-2">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control " %>
        </div>
      </div>

      <!--電話番号-->
      <div class="field d-md-flex my-2">
        <div class="col-md-3">
          <%= f.label :'電話番号'%>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control " %>
        </div>
      </div>

      <!--メールアドレス-->
      <div class="field d-md-flex my-2">
        <div class="col-md-3">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-md-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="actions d-md-flex">
        <div class="col-md-3"></div>
        <div class="col-lg-5 col-6  my-2">
          <button type="submit" class="btn btn-success px-5">
            変更内容を保存
          </button>
        <% end %>
        </div>
        <div class="col-md-6 my-2">
          <%= link_to '退会する', unsubscribe_path, class:'btn btn-danger' %>
        </div>
      </div>

    </div>
  </div>
</div>