<div class="container">
  <div class="col-md-4 mb-4">
    <h5 class="bg-light px-4 d-inline">注文履歴詳細</h5>
  </div>
  <div class="row">
    <div class="col-md-7">
      <h6><b>注文情報</b></h6>
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="bg-light">配送先</td>
          <td>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class="bg-light">支払方法</td>
          <td><%= @order.payment_i18n %></td>
        </tr>
        <tr>
          <td class="bg-light">ステータス</td>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h6><b>請求情報</b></h6>
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">商品合計</td>
          <td></td>
        </tr>
        <tr>
          <td class="bg-light">配送料</td>
          <td></td>
        </tr>
        <tr>
          <td class="bg-light"><b>ご請求額</b></td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <h6><b>注文内容</b></h6>
      <table class="table table-bordered">
        <tr class="bg-light">
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <% @order.items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td>

            <%#= item.amount %></td>
          <td><%#= item.subtotal %></td>
            <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>