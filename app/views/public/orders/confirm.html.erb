<div class="container">
    <div class="row">
      <div class="col-md-12">

        <h5 class="mr-auto d-inline bg-light px-4">注文情報確認</h5>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-8">
        <table class="table table-bordered">
          <thead class="bg-light">
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <!--商品名-->
               <td>
                <%= image_tag cart_item.item.item_image,size: '60x40' %>
                <%= cart_item.item.name %>
              </td>
              <!--単価-->
              <td>
                <%= cart_item.item.with_tax_price.to_s(:delimited) %>
              </td>
              <!--数量-->
              <td>
                <%= cart_item.amount %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-4">
        <table class="table table-bordered">
          <tr>
            <td class="bg-light">送料</td>
            <td>
              <!--全国一律800円！-->
              <%= @order.postage %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="bg-light">請求金額</td>
            <td>
              <%= (@total += @order.postage).to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <table class="table-sm">
          <tr class="py-5">
            <td class="py-3"><b>支払方法</b></td>
            <td><%= @order.payment_i18n %></td>
          </tr>
          <tr>
            <td class="py-3"><b>お届け先</b></td>
            <td>〒<%= @order.postal_code %>　<%= @order.address %><br><%= @order.name %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row my-1">
      <div class="col-md-3 mx-auto">
        <%= form_with model: @order, url: orders_path, meehod: :post, local: true do |f| %>
        <% f.hidden_field :name %>
        <% f.hidden_field :address %>
        <% f.hidden_field :total_price, value: @total %>
        <%= f.submit "注文を確定する", class:"btn btn-success mx-auto" %>
        <% end %>
      </div>
    </div>
</div>