<div class="container">

  <div class="row">
    <div class="col-md-2">
      <div class="card mt-3">
        <div class="card-header small">
        ジャンル検索
        </div>
        <% @genres.each do |genre| %>
        <div class="my-2">
          <p class="card-text ml-3 small"><%= genre.name %></p>
        </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 mt-3">
      <h4 class="mb-4">商品一覧<span class="small">(全<%= @count %>件)</span></h4>

      <div class="row">

      <% @items.each do |item| %>
      <div class="col-lg-3 col-6">
        <div style="width:10rem;" class="mb-2">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.item_image,size: '150x100', url: item_path(item.id) %>
          <% end %>
          <p class="card-title mb-1 mt-2 small"><%= item.name %></p>
          <p class="card-text small">¥<%= item.price.to_s(:delimited) %></p>
        </div>
      </div>
      <% end %>
      </div>


    </div>
  </div>
</div>