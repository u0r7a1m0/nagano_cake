  <!--会員用　新規会員登録ページ-->
<div class="container mt-4 mx-auto">
  <div class="row mt-5 mx-md-auto">

    <div class="col-md-11 mx-auto">
      <h4 class="bg-light d-inline px-2 ml-3">新規会員登録</h4>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class=" col-md-11 mt-5">
          <!--名前-->
          <tr>
            <td>名前</td>
            <td>(姓)</td>
            <td>
              <input type="last_name" class="form-control" placeholder="令和">
            </td>
            <td>(名)</td>
            <td>
              <input type="first_name" class="form-control" placeholder="道子">
            </td>
          </tr>
          <!--フリガナ-->
          <tr>
            <td>フリガナ</td>
            <td>(セイ)<td>
              <input type="last_name" class="form-control" placeholder="レイワ">
            </td>
            <td>(メイ)</td>
            <td>
              <input type="first_name" class="form-control" placeholder="ミチコ">
            </td>
          </tr>
          <!--メールアドレス-->
          <tr>
            <td>メールアドレス</td>
            <td></td>
            <td>
              <input type="email" class="form-control" id="staticEmail" placeholder="sample@example.com">
            </td>
          </tr>
          <!--郵便番号-->
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td></td>
            <td><input type="postal_code" class="form-control" placeholder="0000000"></td>
          </tr>
          <!--住所-->
          <tr>
            <td>住所</td>
            <td></td>
            <td colspan="3"><input type="postal_code" class="form-control" placeholder="東京都渋谷区代々木神園町0-0"></td>
          </tr>
          <!--電話番号-->
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td></td>
            <td><input type="telephone_number" class="form-control" placeholder="00000000000"></td>
          </tr>
          <tr>
            <td>パスワード(6文字以上)</td>
            <td></td>
            <td><input type="encrypted_password" class="form-control" autocomplete="new-password"></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td></td>
            <td><input type="encrypted_password" class="form-control" autocomplete="new-password"></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td>
              <button type="submit" class="btn btn-success btn-block my-4">
              新規登録
              </button>
            </td>
          </tr>
        </table>
        <% end %>

    </div>
    <div class="col-md-11 mx-auto">
      <p class="bg-light d-inline ml-3">既に登録がお済みの方</p>
    </div>
    <div class="col-md-9 d-sm-inline mx-md-auto">
      <%= link_to new_customer_session_path do %>
      こちら
      <% end %>
      <span>からログインしてください。</span>
    </div>
  </div>
</div>